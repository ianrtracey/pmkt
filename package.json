{
  "name": "pmkt",
  "version": "0.0.1",
  "description": "Rich terminal UI for Polymarket",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "pmkt": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.3.1",
    "zod": "^3.23.8",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.12",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.16.0",
    "ink-testing-library": "^4.0.0",
    "jsdom": "^27.4.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "polymarket",
    "terminal",
    "cli",
    "ink",
    "prediction-markets"
  ],
  "license": "MIT"
}
